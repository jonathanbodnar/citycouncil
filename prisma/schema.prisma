// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// City information
model City {
  id              String    @id @default(cuid())
  slug            String    @unique
  name            String
  state           String    @default("TX")
  rssUrl          String
  calendarUrl     String
  websiteUrl      String
  meetingSchedule String?
  location        String?
  zipCodes        String[]  // Array of zip codes
  meetings        Meeting[]
  lastFetched     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Cached meeting data
model Meeting {
  id            String      @id @default(cuid())
  externalId    String?     // ID from the RSS feed if available
  cityId        String
  city          City        @relation(fields: [cityId], references: [id], onDelete: Cascade)
  title         String
  description   String?
  date          DateTime
  time          String
  location      String
  address       String?
  agendaUrl     String?
  liveStreamUrl String?
  meetingType   MeetingType @default(REGULAR)
  status        MeetingStatus @default(UPCOMING)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([cityId, externalId])
  @@index([cityId])
  @@index([date])
  @@index([status])
}

// Zip code to city mapping cache
model ZipCodeMapping {
  id        String   @id @default(cuid())
  zipCode   String   @unique
  cityIds   String[] // Array of city IDs
  createdAt DateTime @default(now())
}

// Cache metadata for tracking when to refresh
model CacheMetadata {
  id          String   @id @default(cuid())
  key         String   @unique
  lastUpdated DateTime
  expiresAt   DateTime
  createdAt   DateTime @default(now())
}

enum MeetingType {
  REGULAR
  WORK_SESSION
  SPECIAL
  PUBLIC_HEARING
  OTHER
}

enum MeetingStatus {
  UPCOMING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}
